<%- include ("partials/top") %>

    <div class="text-center">
        <h2 class="page-header">Account Register</h2>
        <%- include ("partials/messages") %>
            <form class="form-signin" action="/users/register" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Enter your name" id="name" value="<%= typeof name != 'undefined' ? name : '' %>">
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" name="email" placeholder="Enter email" id="email" value="<%= typeof email != 'undefined' ? email : '' %>">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="Enter password" id="password" value="<%= typeof password != 'undefined' ? password : '' %>">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password2" placeholder="Confirm password" id="password2" value="<%= typeof password2 != 'undefined' ? password2 : '' %>">
                </div>
                <button type="submit" class="btn btn-lg btn-primary">Register</button>
            </form>
            <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
    </div>

    <%- include ("partials/bottom") %>