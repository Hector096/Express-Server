<%- include ("partials/top") %>

    <div class="text-center">
        <h2 class="page-header">Account Login</h2>
        <%- include ("partials/messages") %>
            <form class="form-signin" action="/users/login" method="POST">
                <div class="form-group">
                    <input type="email" class="form-control" name="email" placeholder="Enter email" id="email" required autofocus>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="Enter password" id="password" required>
                </div>
                <button type="submit" class="btn btn-lg btn-primary">Login</button>
            </form>
            <p class="lead mt-4">
                No Account? <a href="/users/register">Register</a>
            </p>
    </div>

    <%- include ("partials/bottom") %>